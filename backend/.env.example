# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-endpoint.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=gpt-4
AZURE_OPENAI_API_VERSION=2023-12-01-preview

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
ATHENA_S3_OUTPUT_LOCATION=s3://your-bucket/athena-results/
ATHENA_WORKGROUP=primary
ATHENA_TIMEOUT_SECONDS=1800

# Authentication
HERE_AUTH_ENDPOINT=https://visualization-api.analytics.in.here.com/api/v1/authenticate

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=480

# Application Configuration
SCHEMAS_DIR=schemas
LOG_LEVEL=INFO
ENV=development

# API Configuration
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Database
DATABASE_URL=sqlite+aiosqlite:///./app_data.db
CACHE_DATABASE_URL=sqlite:///./query_cache.db
LOGS_DATABASE_URL=sqlite:///./query_logs.db

# Vector Store
DOCS_VECTORSTORE_PATH=athena_docs_vectorstore
FUNCTION_VECTORSTORE_PATH=vectorstores
